// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/typescript-node
{
	"name": "portfolio-site",
	// "build": {
	// 	"dockerfile": "Dockerfile",
	// },
	"image": "mcr.microsoft.com/devcontainers/base:noble",
	"workspaceFolder": "/workspaces/portfolio-site",
	"features": {
		"ghcr.io/enricosecondulfo/devcontainer-features/volta:1": {
			"version": "v2.0.2"
		},
		"ghcr.io/aquaproj/devcontainer-features/aqua-installer:0.1.3": {
			"aqua_version": "v2.56.1"
		}
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"streetsidesoftware.code-spell-checker-british-english",
				"vivaxy.vscode-conventional-commits"
			]
		}
	},
	"containerEnv": {
		"AQUA_HOME": "/home/vscode/.local/share/aquaproj-aqua"
	},
	"remoteEnv": {
		"PATH": "/home/vscode/.local/share/aquaproj-aqua/bin:${containerEnv:PATH}"
	}
}