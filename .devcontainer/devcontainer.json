// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/typescript-node
{
	"name": "portfolio-site",
	"image": "mcr.microsoft.com/devcontainers/base:noble",
	"workspaceFolder": "/workspaces/portfolio-site",
	"features": {
		"ghcr.io/aquaproj/devcontainer-features/aqua-installer:0.1.3": {
			"aqua_version": "v2.56.1"
		},
		"ghcr.io/anthropics/devcontainer-features/claude-code:1.0": {}
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"streetsidesoftware.code-spell-checker-british-english",
				"vivaxy.vscode-conventional-commits",
				"zoma.vscode-auto-open-workspace",
				"eamodio.gitlens",
				"biomejs.biome"
			],
			"settings": {
				"autoOpenWorkspace.autoOpen": "always",
				"editor.formatOnSave": true,
				"[javascript]": {
					"editor.defaultFormatter": "biomejs.biome"
				},
				"[typescript]": {
					"editor.defaultFormatter": "biomejs.biome"
				}
			}
		}
	},
	"containerEnv": {
		"AQUA_HOME": "/home/vscode/.local/share/aquaproj-aqua",
		"VOLTA_HOME": "/home/vscode/.volta"
	},
	"remoteEnv": {
		"PATH": "${containerEnv:VOLTA_HOME}/bin:/home/vscode/.local/share/aquaproj-aqua/bin:${containerEnv:PATH}"
	},
	"onCreateCommand": "bash /workspaces/portfolio-site/.devcontainer/onCreateCommand.sh"
}